{
  "functions": [
    {
      "source": "dist/apps/api",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "dist/apps/client/browser",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api",
        "function": "app"
      },
      {
        "source": "/api/**",
        "function": "app"
      },
      {
        "source": "/api-docs",
        "function": "app"
      },
      {
        "source": "/api-docs/**",
        "function": "app"
      },
      {
        "source": "/api-docs-json",
        "function": "app"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
