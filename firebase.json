{
  "functions": [
    {
      "codebase": "home",
      "source": "dist/apps/home-api"
    },
    {
      "codebase": "tochtli",
      "source": "dist/apps/tochtli-api"
    }
  ],
  "hosting": [
    {
      "target": "app",
      "public": "dist/apps/home/browser",
      "rewrites": [
        {
          "source": "/api",
          "function": "homeApp"
        },
        {
          "source": "/api/**",
          "function": "homeApp"
        },
        {
          "source": "/api-docs",
          "function": "homeApp"
        },
        {
          "source": "/api-docs/**",
          "function": "homeApp"
        },
        {
          "source": "/api-docs-json",
          "function": "homeApp"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "tochtli",
      "public": "dist/apps/tochtli/browser",
      "rewrites": [
        {
          "source": "/api",
          "function": "tochtliApp"
        },
        {
          "source": "/api/**",
          "function": "tochtliApp"
        },
        {
          "source": "/api-docs",
          "function": "tochtliApp"
        },
        {
          "source": "/api-docs/**",
          "function": "tochtliApp"
        },
        {
          "source": "/api-docs-json",
          "function": "tochtliApp"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
